<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="basics.Controller"
          alignment="center"
          hgap="10" vgap="10">

    <Label GridPane.rowIndex="0" text="Click the button or type arrow keys" />

    <Button GridPane.rowIndex="1" text="Reverse" onAction="#onButtonClick" />

    <Label GridPane.rowIndex="2" text="ABCDEFGHIJKLMNOPQRSTUVWXYZ" fx:id="theLabel" />

</GridPane>
